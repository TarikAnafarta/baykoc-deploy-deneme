# Backend environment example

# Django
SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (override in Docker/CI as needed)
DB_NAME=baykoc
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis cache
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_PORT=6379
CACHE_TIMEOUT_SECONDS=300
REDIS_CACHE_PREFIX=baykoc
REDIS_MAX_CONNECTIONS=50

# Frontend / backend origins (for CORS/CSRF and OAuth redirects)
FRONTEND_URL=http://localhost:5173
BACKEND_BASE_URL=http://localhost:8000

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_PATH=/api/users/auth/google/callback
# Uncomment to force a fully-qualified redirect URI (otherwise derived from BACKEND_BASE_URL + path)
# GOOGLE_REDIRECT_URI=https://your-backend.example.com/api/users/auth/google/callback

# Web server port
WEB_PORT=8000

# Cloudinary Configuration
# Get your credentials from https://cloudinary.com/console
CLOUDINARY_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

GROQ_API_KEY=